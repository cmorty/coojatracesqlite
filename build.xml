<?xml version="1.0"?>

<project name="CoojaTrace-sqlite" default="jar" basedir=".">
  <property name="cooja" value="../../.."/>
  <property name="archive" value="coojatrace-sqlite.jar"/>

  <target name="init">
    <tstamp/>
  	
    <path id="build.classpath">
  	      <pathelement location="${cooja}/apps/coojatrace/lib/scala-library.jar"   />
  	      <pathelement location="build"   />
  	</path>
  	<taskdef resource="scala/tools/ant/antlib.xml">
  	      <classpath>
  	        <pathelement location="${cooja}/apps/coojatrace/lib/scala-compiler.jar"   />
  	        <pathelement location="${cooja}/apps/coojatrace/lib/scala-library.jar"   />
  	      </classpath>
  	</taskdef>
  </target>

  <target name="compile" depends="init">
    <mkdir dir="build"/>
    <scalac srcdir="scala" destdir="build" deprecation="yes">
      <classpath>
        <pathelement location="${cooja}/dist/cooja.jar"/>
      	<pathelement location="${cooja}/lib/jdom.jar"/>
        <pathelement location="${cooja}/lib/log4j.jar"/>
	<pathelement location="${cooja}/apps/coojatrace/coojatrace.jar"/>
      	<pathelement location="${cooja}/apps/coojatrace/lib/scala-library.jar"/>
      	<pathelement location="${cooja}/apps/coojatrace/lib/scala-compiler.jar"/>
	<pathelement location="${cooja}/apps/coojatrace/lib/scala-reactive.jar"/>
	<pathelement location="lib/sqlite4java.jar"/>
      </classpath>
    </scalac>
  </target>
	
  <target name="docs" depends="init">
    <mkdir dir="scaladoc"   />
    <scaladoc
      srcdir="scala"
      destdir="scaladoc"
      deprecation="yes" unchecked="yes"
      classpathref="build.classpath">
	<classpath>
        <pathelement location="${cooja}/dist/cooja.jar"/>
        <pathelement location="${cooja}/lib/jdom.jar"/>
        <pathelement location="${cooja}/lib/log4j.jar"/>
        <pathelement location="${cooja}/apps/mspsim/lib/mspsim.jar"/>
        <pathelement location="${cooja}/apps/mspsim/lib/cooja_mspsim.jar"/>
        <pathelement location="lib/scala-reactive.jar"/>
        <pathelement location="lib/scala-library.jar"/>
        <pathelement location="lib/scala-compiler.jar"/>
      </classpath>

    </scaladoc>
  </target>

  <target name="clean" depends="init">
    <delete dir="build" file="${archive}"/>
  </target>
	
	
  <target name="jar" depends="compile">
	<jar destfile="${archive}" basedir="build" />
  </target>

</project>
